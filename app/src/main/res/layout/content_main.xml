<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.stjkagilonu.myapplication.MainActivity"
    tools:showIn="@layout/activity_main"
    style="@style/Theme.AppCompat.NoActionBar">

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/line_indicateTL"
        android:layout_alignLeft="@+id/action_tl"
        android:layout_alignStart="@+id/action_tl"
        android:layout_below="@+id/action_tl"
        android:layout_alignRight="@+id/action_tl"
        android:layout_alignEnd="@+id/action_tl" />



    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Gönder"
        android:id="@+id/send"
        android:layout_marginTop="190dp"
        android:src="@drawable/send_button"
        android:layout_marginBottom="50dp"
        android:layout_alignTop="@+id/subtraction"
        android:background="@color/background" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/currentAmount_BG"
        android:src="@drawable/ic_lens_black_24dp"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/header_callAmountInfo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/sender_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="20 ₺"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:id="@+id/amountDisplay"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignTop="@+id/subtraction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addition"
        android:src="@drawable/sag_ok"
        android:background="@color/background"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtraction"
        android:src="@drawable/sol_ok"
        android:background="@color/background"
        android:layout_alignTop="@+id/addition"
        android:layout_toRightOf="@+id/display_kumbaraInfo"
        android:layout_toEndOf="@+id/display_kumbaraInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/header_kumbaraToplam"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/display_kumbaraInfo"
        android:layout_below="@+id/header_kumbaraToplam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/header_sonIslem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/display_kumbaraInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/header_callTimeInfo"
        android:layout_below="@+id/header_sonIslem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/header_callAmountInfo"
        android:layout_below="@+id/header_callTimeInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/display_lastCallTime"
        android:layout_alignTop="@+id/header_callTimeInfo"
        android:layout_toRightOf="@+id/header_callTimeInfo"
        android:layout_toEndOf="@+id/header_callTimeInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/display_lastCallAmount"
        android:layout_alignTop="@+id/header_callAmountInfo"
        android:layout_toRightOf="@+id/header_callAmountInfo"
        android:layout_toEndOf="@+id/header_callAmountInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GÖNDER"
        android:id="@+id/send_writing"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/send"
        android:layout_alignLeft="@+id/action_bes"
        android:layout_alignStart="@+id/action_bes" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonColor"
        android:layout_above="@+id/send_writing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:id="@+id/line" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gönderen"
        android:textSize="20dp"
        android:id="@+id/sender_name"
        android:layout_alignBottom="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:inputType="text"
        android:textAppearance="@color/buttonColor" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/sender_name"
        android:layout_alignTop="@+id/sender_name"
        android:layout_toRightOf="@+id/line"
        android:layout_toEndOf="@+id/line"
        android:id="@+id/space" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TL GÖNDER"
        android:id="@+id/action_tl"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:onClick="mainActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BES GÖNDER"
        android:id="@+id/action_bes"
        android:layout_alignTop="@+id/action_tl"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:onClick="besActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALTIN GÖNDER"
        android:id="@+id/action_g"
        android:layout_alignTop="@+id/action_bes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contextClickable="false"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:focusable="false"
        android:clickable="true"
        android:gravity="center"
        android:textAlignment="center"
         android:onClick="goldActivity"/>


</RelativeLayout>

