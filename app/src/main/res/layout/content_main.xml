<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.stjkagilonu.myapplication.MainActivity"
    tools:showIn="@layout/activity_main"
    style="@style/Theme.AppCompat.NoActionBar">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Gönder"
        android:id="@+id/send"
        android:layout_marginTop="190dp"
        android:src="@drawable/send_button"
        android:layout_marginBottom="50dp"
        android:layout_alignTop="@+id/subtraction"
        android:background="@color/background" />



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/currentAmount_BG"
        android:src="@drawable/ic_lens_black_24dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/header_callAmountInfo"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/sender_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/currentAmount_BG"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:text="20 ₺"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:id="@+id/amountDisplay"
        android:textSize="35dp"
        android:textStyle="bold"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:id="@+id/addition"
        android:src="@drawable/sag_ok"
        android:background="@color/background"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/subtraction"
        android:src="@drawable/sol_ok"
        android:background="@color/background"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GÖNDER"
        android:id="@+id/send_writing"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/background"
        android:layout_alignBottom="@+id/send" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/buttonColor"
        android:layout_above="@+id/send_writing"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/line" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Gönderen"
        android:textSize="20dp"
        android:id="@+id/sender_name"
        android:layout_alignBottom="@+id/line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:inputType="text"
        android:background="@android:color/transparent"
        android:textAppearance="@color/buttonColor" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_above="@+id/sender_name"
        android:layout_alignTop="@+id/sender_name"
        android:layout_toRightOf="@+id/line"
        android:layout_toEndOf="@+id/line"
        android:id="@+id/space" />


<RelativeLayout
    android:id="@+id/buton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="TL GÖNDER"
        android:id="@+id/action_tl"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:onClick="mainActivity"
        android:elevation="0dp"
        style="?android:attr/borderlessButtonStyle" />/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:text="BES GÖNDER"
        android:id="@+id/action_bes"
        android:layout_alignTop="@+id/action_tl"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/background"
        android:textAlignment="center"
        android:onClick="besActivity"
        android:elevation="0dp"
        style="?android:attr/borderlessButtonStyle" />/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALTIN GÖNDER"
        android:id="@+id/action_g"
        android:layout_alignTop="@+id/action_bes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="-5dp"
        android:contextClickable="false"
        android:background="@color/colorPrimary"
        android:textColor="@color/background"
        android:focusable="false"
        android:clickable="true"
        android:gravity="center"
        android:textAlignment="center"
         android:onClick="goldActivity"
        android:elevation="0dp"
        style="?android:attr/borderlessButtonStyle" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/toolbar_misc"
        android:layout_below="@+id/action_tl"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:background="@color/colorAccent"
        android:id="@+id/line_indicate_product"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_alignStart="@+id/action_tl"
        android:layout_alignEnd="@+id/action_tl"
        android:layout_below="@+id/action_tl"

        />

    />
</RelativeLayout>


</RelativeLayout>

